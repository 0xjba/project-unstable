# Keeper Service Configuration
# Copy this file to .env and fill in your values

# Blockchain Configuration
KEEPER_PRIVATE_KEY=your_private_key_here
RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
CONTRACT_ADDRESS=0x742d35cc6e1e8e3e8e8e8e8e8e8e8e8e8e8e8e8e

# Scheduling (optional - defaults to every 10 minutes)
CRON_SCHEDULE=*/10 * * * *

# Gas Configuration (optional)
GAS_LIMIT=500000
MAX_PRIORITY_FEE=2000000000

# Example cron schedules:
# */10 * * * *     - Every 10 minutes
# */15 * * * *     - Every 15 minutes  
# 0 */1 * * *      - Every hour
# 0 0 * * *        - Every day at midnight
